<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3"
    tools:ignore="HardcodedText">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:text="Coroutine Section"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:textStyle="bold" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/coroutineIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coroutine Intro" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/coroutineWithAsyncAwait"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coroutines with Async &amp; Await" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/coroutineWithViewModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coroutines with ViewModel" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/coroutineLifecycleScopeActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coroutines with LifecycleScope" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/coroutineWithLiveData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coroutines with LiveData" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
